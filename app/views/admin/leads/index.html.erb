<div class="admin-index-container">
  <div class="header-container">
    <h1 class="header-title">Leads</h1>
    <%= link_to "New Lead", admin_index_path(), class: "btn btn--primary" %>
    <%= link_to "Retour", admin_index_path(), class: "btn btn--light" %>
  </div>

  <div class="content-container">
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
          </tr>
        </thead>
        <tbody>
          <% @leads.each do |lead| %>
            <tr>
              <td><%= lead.id %></td>
              <td><%= lead.first_name %></td>
              <td><%= lead.last_name %></td>
              <td><%= lead.email %></td>
              <td><%= lead.phone_number %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="filter-container">
      <h3>hello</h3>
    </div>
  </div>
</div>