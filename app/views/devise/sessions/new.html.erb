
<div class="login-container">
  <%= link_to "Retour au site", root_path %>
  <h2>Se connecter</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs form-login-container">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label: "Mot de passe",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Se rappeler de moi ?", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions flex align-center justify-center mt-16px">
      <%= f.button :submit, "Se connecter", class:"btn btn--primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>